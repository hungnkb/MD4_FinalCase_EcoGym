<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<body class="bg-light">
<div class="container-fluid p-0">
    <h2>List Wallet</h2>
    <div class="p-2 bd-highlight">
        <a href="/wallets/create"><button type="button" class="btn btn-info">Add New A Wallet</button></a>
    </div>
    <% for(const wallet of wallets) { %>
        <p>
            IdUser: <%= wallet.idUser %>
        </p>
        <p>
            Wallet Name: <%= wallet.walletName %>
        </p>
        <p>
            Icon: <%= wallet.icon %>
        </p>
        <p>
            Total MoneyLeft: <%= wallet.totalMoneyLeft %>
        </p>
        <a href="/wallets/update/<%= wallet.id %>" class="btn btn-primary">Update</a>
        <a onclick="return confirm('Are you sure you want to delete this wallet?')"
           href="/wallets/delete/<%= wallet.id %>" class="btn btn-danger">Delete</a>
        </br>

    <% } %>

</div>
</body>

